{% extends 'base.html.twig' %}



{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="affichepop">
<div class="eventpop">Les évènements populaires :</div>
<div class="scrolling-wrapper">
        {% for event in eventspop %}

                <a class="lienevent" href="{{ path('app_index_event_show', {'id': event.id}) }} ">
                <div class="eventcontainerscroll">
                <div class="eventitem"><img src="{{ asset('build/logoev/' ~ event.logoev) }}" class="eventitemimg" ></img></div>
                <div ><div class="eventplace">Place restante : {{ event.nbPlace - event.nbInscrit }}</div></div>
                <div class="eventtitre">{{ event.nomEvent }}</div>
                <div class="bar"><hr></div>
                <div class="eventitemdesc"> {{ event.description|length > 25 ? event.description|slice(0, 25) ~ '...' : event.description }}</div>
                </div>
                </a>
                
        {% else %}
            
        {% endfor %}
        </div>

<div class="eventpop">Les évènements proche :</div>
        <div class="scrolling-wrapper">

        {% for event in eventsProche %}

                <a class="lienevent" href="{{ path('app_index_event_show', {'id': event.id}) }} ">
                <div class="eventcontainerscroll">
                <div class="eventitem"><img src="{{ asset('build/logoev/' ~ event.logoev) }}" class="eventitemimg" ></img></div>
                <div ><div class="eventplace">Place restante : {{ event.nbPlace - event.nbInscrit }}</div></div>
                <div class="eventtitre">{{ event.nomEvent }}</div>
                <div class="bar"><hr></div>
                <div class="eventitemdesc"> {{ event.description|length > 25 ? event.description|slice(0, 25) ~ '...' : event.description }}</div>
                </div>
                </a>
                
        {% else %}
            
        {% endfor %}
                </div>

</div>
</div>


{% endblock %}
