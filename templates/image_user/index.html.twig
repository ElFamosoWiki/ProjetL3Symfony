{% extends 'base.html.twig' %}

{% block title %}ImageUser index{% endblock %}

{% block body %}
    <h1>ImageUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UrlImage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image_user in image_users %}
            <tr>
                <td>{{ image_user.id }}</td>
                
                <td><img src="{{ asset('build/pdp/' ~ image_user.UrlImage) }}" height=50 width=50 border-radius=50%></td>
                <td>

                    <a href="{{ path('app_image_user_show', {'id': image_user.id}) }}">show</a>
                    <a href="{{ path('app_image_user_edit', {'id': image_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_image_user_new') }}">Create new</a>
{% endblock %}
